<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/purple_A100"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:textSize="32sp"
        android:text="Which nun are you?" />


    <RelativeLayout
        android:id="@+id/nun_ava"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:background="@color/purple_500"
        android:onClick="selectAva"
        >
        <ImageView
            android:id="@+id/image_ava"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/ava"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_ava"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:text="Ana"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nun_mary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:background="@color/purple_500"
        android:onClick="selectMary"
        >
        <ImageView
            android:id="@+id/image_shotgun_mary"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/mary"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_shotgun_mary"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:text="Shotgun Mary"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nun_lilith"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:background="@color/purple_500"
        android:onClick="selectLilith"
        >
        <ImageView
            android:id="@+id/image_lilith"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/lilith"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_lilith"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:text="Lilith"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nun_beatrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:background="@color/purple_500"
        android:onClick="selectBeatrice"
        >
        <ImageView
            android:id="@+id/image_beatrice"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/beatrice"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_beatrice"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:text="Beatrice"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/nun_camila"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/standard_spacing"
        android:background="@color/purple_500"
        android:onClick="selectCamila"
        >
        <ImageView
            android:id="@+id/image_camila"
            android:layout_width="75dp"
            android:layout_height="100dp"
            android:padding="8dp"
            android:src="@drawable/camila"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_camila"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:layout_marginLeft="16dp"
            android:text="Camila"
            />
    </RelativeLayout>
</LinearLayout>